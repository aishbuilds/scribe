<div class="row">
  <div class="col-xs-8 col-xs-offset-4">
      <div class="row"><h2 class="col-xs-4 col-xs-offset-3 center-text">Log in</h2></div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
        <div class="row form-group">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-4">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="row form-group">
          <%= f.label :password, class: "col-sm-2 control-label" %>
          <div class="col-sm-4">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="row form-group">
              <%= f.label :remember_me, class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.check_box :remember_me %>
              </div>
            </div>
        <% end -%>

        <div class="row form-group">
          <%= f.submit "Log in", class: "col-xs-2 col-xs-offset-3 btn btn-large btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
