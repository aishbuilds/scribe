<div class="row">
  <div class="col-xs-8 col-xs-offset-4">
    <div class="row"><h2 class="col-xs-4 col-xs-offset-3 center-text">Sign up</h2></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <div class="row form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row form-group">
        <%= f.label :password, class: "col-sm-2 control-label" %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class="col-sm-4">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="row form-group">
        <%= f.label 'Confirm Password', class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-sm-4 col-sm-offset-2">
          <label class="radio-inline">
            <%= f.radio_button :user_type_id, UserType.find_by_name("scribe_volunteer").id %> <strong>Volunteer as a scribe!</strong>
          </label>
        </div>
        <div class="col-sm-4">
          <label class="radio-inline">
            <%= f.radio_button :user_type_id, UserType.find_by_name("scribe_requester").id %> <strong>I need a scribe!</strong>
          </label>
        </div>
      </div>


      <div class="row form-group">
        <%= f.submit "Sign me up!", class: "col-xs-2 col-xs-offset-3 btn btn-large btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

