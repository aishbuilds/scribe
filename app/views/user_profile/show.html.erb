<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="row margin-left-0">
      <div class="col-xs-1 col-xs-offset-9 logout"> <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> </div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-4">
        <%= image_tag("user.jpg", :alt => "rss feed", :class => "img-responsive profile-img") %>
      </div>
    </div>

    <div class="row margin-top-20">
      <div class="col-xs-1 col-xs-offset-4">
        Name:
      </div>

      <div class="col-xs-2">
        <%= @user.user_detail.try(:name) ?  @user.user_detail.name : "-NA-" %>
      </div>
    </div>

    <div class="row margin-top-20">
      <div class="col-xs-1 col-xs-offset-4">
        Email:
      </div>

      <div class="col-xs-2">
        <%= @user.email %>
      </div>
    </div>

    <div class="row margin-top-20">
      <div class="col-xs-1 col-xs-offset-4">
        Cities:
      </div>

      <div class="col-xs-2">
        <%= @user.user_detail.cities.empty? ? "-NA-" : @user.user_detail.cities.map(&:name).join(", ") %>
      </div>
    </div>

    <div class="row margin-top-20">
      <div class="col-xs-1 col-xs-offset-4">
        Localities:
      </div>

      <div class="col-xs-2">
        <%= @user.user_detail.localities.empty? ? "-NA-" : @user.user_detail.localities.map(&:name).join(", ") %>
      </div>
    </div>

    <div class="row margin-top-20">
      <div class="col-xs-1 col-xs-offset-4">
        Gender:
      </div>

      <div class="col-xs-2">
        <%= @user.user_detail.try(:gender) ?  @user.user_detail.gender.capitalize : "-NA-" %>
      </div>
    </div>


  </div>
</div>